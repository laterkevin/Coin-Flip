<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/coin_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coin1" />

    <Button
        android:id="@+id/coin_flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Flip Coin"
        app:layout_constraintEnd_toEndOf="@+id/coin_view"
        app:layout_constraintStart_toStartOf="@+id/coin_view"
        app:layout_constraintTop_toBottomOf="@+id/coin_view" />
</androidx.constraintlayout.widget.ConstraintLayout>